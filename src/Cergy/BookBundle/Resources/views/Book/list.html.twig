{%  extends '::base.html.twig' %}

{% block title 'Book' %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/cergynews/css/style.css') }}" type="text/css" media="all" />
    {% endblock %}
    {%  block body %}
        <h2>List of books</h2>
        <a href="./create">Add a book</a>

        {%  if app.session.flashBag.has('success') %}
            <ul>
                {% for message in app.session.flashBag.get('success') %}
                    <li>{{ message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
        {%  if app.session.flashBag.has('error') %}
            <ul>
                {% for message in app.session.flashBag.get('error') %}
                    <li>{{ message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
        {% for aBook in book %}
            <fieldset><legend>{{ aBook.id }} - {{ aBook.title }} - By {{ aBook.author }}</legend>
                <p>{{ aBook.description }}</p>
                <p>{{ aBook.publishAt|date }}</p>
                <p>{{ aBook.price }} â‚¬</p>
                <a href="./edit/{{ aBook.id }}">Edit</a> - <a href="./delete/{{ aBook.id }}"> Delete</a>
            </fieldset>
        {% endfor %}
    {%  endblock body %}